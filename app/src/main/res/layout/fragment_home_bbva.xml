<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/id_linear_layout_home"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIENVENIDO(A)"
                    android:textColor="@color/blanco"
                    android:id="@+id/txt_welcome"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_usuario"
                    android:layout_below="@+id/txt_welcome"
                    android:textSize="30sp"
                    android:text="Paul"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"/>

            <ImageView
                    android:id="@+id/img_ic_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/txt_usuario"
                    android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>

        <EditText
                android:background="@drawable/background_search"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:maxLines="1"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/dark_gray"
                android:hint="Buscar lugares"
                android:drawableRight="@drawable/ic_search"/>

    </LinearLayout>

    <ListView
            android:id="@+id/list_promocion"
            android:layout_width="match_parent"
            android:layout_below="@id/id_linear_layout_home"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp">

    </ListView>


</RelativeLayout>
